<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.uno.controller.GameController">

    <top>
        <Label fx:id="gameStatusLabel" text="Inizia il gioco!" BorderPane.alignment="CENTER" style="-fx-font-size: 20px; -fx-padding: 10;"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Carta sul tavolo:"/>
            <Label fx:id="topCardLabel" text="-" style="-fx-font-size: 18px;"/>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Le tue carte:"/>
            <HBox fx:id="playerHand" spacing="10" alignment="CENTER"/>
            <Button text="Pesca carta" onAction="#handleDrawCard"/>
        </VBox>
    </bottom>

</BorderPane>
