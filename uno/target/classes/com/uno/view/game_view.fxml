<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:controller="com.uno.controller.GameController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="600">
    
    <!-- Parte alta: carta sul tavolo -->
    <top>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Carta in cima:"/>
            <ImageView fx:id="topCardImage" fitHeight="120" fitWidth="80"/>
        </HBox>
    </top>

    <!-- Parte centrale: messaggi -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="statusText" style="-fx-font-size: 16px;" />
            <Label fx:id="colorLabel" style="-fx-font-size: 16px;"/>
        </VBox>
    </center>

    <!-- Parte bassa: carte del giocatore + bottone 
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <HBox fx:id="playerHandBox" alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="0" left="10"/>
                </padding>
            </HBox>
            <Button fx:id="drawButton" text="Pesca una carta" onAction="#onDrawCardClicked"/>
        </VBox>
    </bottom>-->
    <bottom>
    <VBox spacing="10" alignment="CENTER">
        <FlowPane fx:id="playerHandBox"
                alignment="CENTER"
                hgap="10"
                vgap="10"
                prefWrapLength="0"
                VBox.vgrow="ALWAYS"
                maxWidth="Infinity">
            <padding>
                <Insets top="10" right="10" bottom="0" left="10"/>
            </padding>
        </FlowPane>
        <Button fx:id="drawButton" text="Pesca una carta" onAction="#onDrawCardClicked"/>
    </VBox>
    </bottom>


</BorderPane>
